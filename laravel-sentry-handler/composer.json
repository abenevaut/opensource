{
    "name": "abenevaut/laravel-sentry-handler",
    "type": "library",
    "description": "Laravel sentry exceptions handler",
    "keywords": [
        "laravel",
        "sentry",
        "exceptions",
        "handler"
    ],
    "license": "GPL-3.0-only",
    "authors": [
        {
            "name": "Antoine Benevaut",
            "email": "me@abenevaut.dev"
        }
    ],
    "require": {
        "php": "^8.2",
        "sentry/sentry-laravel": "^4.0"
    },
    "require-dev": {
        "laravel/framework": "^11 || ^12",
        "phpunit/phpunit": "^11.0",
        "mockery/mockery": "^1.6",
        "squizlabs/php_codesniffer": "^3.11 || ^4.0",
        "phpstan/phpstan": "^2.1"
    },
    "autoload": {
        "psr-4": {
            "abenevaut\\SentryHandler\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true
        }
    }
}
