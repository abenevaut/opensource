{
    "name": "abenevaut/laravel-stripe",
    "type": "library",
    "description": "Laravel Stripe API SDK",
    "keywords": [
        "laravel",
        "stripe",
        "api",
        "sdk"
    ],
    "license": "GPL-3.0-only",
    "authors": [
        {
            "name": "Antoine Benevaut",
            "email": "antoine@benevaut.fr"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/http": "^9.27",
        "guzzlehttp/guzzle": "^7.5",
        "spatie/data-transfer-object": "^3.9",
        "stripe/stripe-php": "^9.6"
    },
    "autoload": {
        "psr-4": {
            "abenevaut\\Stripe\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": [
            "vendor/bin/phpunit"
        ]
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "mockery/mockery": "^1.5",
        "laravel/framework": "^9.33"
    }
}
