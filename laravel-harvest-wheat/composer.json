{
    "name": "abenevaut/laravel-harvest-wheat",
    "type": "library",
    "description": "Laravel harvest wheat, database PHPUnit listener",
    "keywords": [
        "laravel",
        "database",
        "testing",
        "phpunit"
    ],
    "license": "GPL-3.0-only",
    "authors": [
        {
            "name": "Antoine Benevaut",
            "email": "me@abenevaut.dev"
        }
    ],
    "require": {
        "php": "^8.1"
    },
    "autoload": {
        "psr-4": {
            "abenevaut\\HarvestWheat\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": [
            "vendor/bin/phpunit",
            "vendor/bin/phpcs --standard=PSR12 ./src"
        ]
    },
    "require-dev": {
        "laravel/framework": "^9.17 || ^10",
        "phpunit/phpunit": "^10.1",
        "mockery/mockery": "^1.5",
        "degraciamathieu/php-smelly-code-detector": "^1.1"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true
        }
    }
}
